{
  "name": "react-slideshow-lightweight",
  "version": "0.1.0",
  "description": "A lightweight, easy-to-use, and customizable slideshow component for React",
  "type": "module",
  "main": "./dist/react-slideshow.umd.cjs",
  "module": "./dist/react-slideshow.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/react-slideshow.js",
      "require": "./dist/react-slideshow.umd.cjs",
